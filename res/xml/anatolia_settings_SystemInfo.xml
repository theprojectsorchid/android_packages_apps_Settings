<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:key="display_customizations2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:title=" ">

         <!-- FlexoOS logo about Us-->
  <PreferenceScreen
        android:key="flexo_lottie_animation"
        android:layout="@layout/flexoos_card"
        android:selectable="true"
        android:fragment="com.epic.fragments.AboutUs"
        android:order="-999" />

		 <!-- orchidosrom grid -->
    <PreferenceScreen
        android:key="HardwareGrid"
        android:enabled="false"
        android:order="-997"    
        android:layout="@layout/Hardware_grid"/>   
    
    <Preference
        android:key="systeminfo"
        android:title="@string/systemdetails_gms">
        <intent
            android:action="android.intent.action.MAIN"
            android:targetClass="dev.sebaubuntu.athena.MainActivity"
            android:targetPackage="dev.sebaubuntu.athena.dev" />
    </Preference>


	<!-- reset page -->
        <Preference
        android:key="reset_dashboard"
        android:title="@string/reset_dashboard_title"
        android:fragment="com.android.settings.system.ResetDashboardFragment"
        settings:controller="com.android.settings.system.ResetPreferenceController"/>


</PreferenceScreen>
