<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:key="display_customizations"
    android:title=" ">


   <!-- Header -->
  <PreferenceCategory
        android:title="Device Details"
        android:order="-997"
        android:layout="@layout/settings_title_header">
  </PreferenceCategory>

    <com.android.settingslib.widget.LayoutPreference
    android:key="syberia_info"
    android:layout="@layout/about_phone_info"
    android:selectable="true"
    android:fragment="com.android.settings.awaken.fragments.DisplayCustomizations2"/>


    <PreferenceCategory
    	android:layout="@layout/custom_preference_category2"
        android:title="@string/device_firmware_about">

        <!-- Android version -->
        <Preference
            android:key="firmware_version"
            android:order="42"           
            settings:layout="@layout/xd_pref_card_mid2"                         
            android:selectable="true"
            android:icon="@drawable/ic_settings_wireless"
            android:title="@string/about_us_device"
            android:fragment="com.android.settings.deviceinfo.firmwareversion.FirmwareVersionSettings"
            settings:controller="com.android.settings.deviceinfo.firmwareversion.FirmwareVersionPreferenceController"/>
    </PreferenceCategory>


  
    <com.android.settingslib.widget.TopIntroPreference
        android:key="hardware_bubbles_desc"
        android:title="@string/Hardware_bubble_setting_description"/>
  
  
    <Preference
        android:key="display_customization_swipe_tap"
        android:title="@string/display_customization_swipe_tap"
        android:fragment="com.android.settings.awaken.fragments.DisplayCustomizations3"/>   
      
    <Preference
        android:key="display_customization_swipe_tap"
        android:title="@string/firmware_about_us_info"
        android:fragment="com.android.settings.awaken.fragments.DisplayCustomizations4"/>     
  
</PreferenceScreen>
