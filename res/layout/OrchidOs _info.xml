<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="General Settings">

    </PreferenceCategory>

     <!-- Header with Multiple Launch Intents 
      Here, we have defined two headers that can launch different activities -->

     <PreferenceCategory
         android:title="@string/network_traffic_title">

         <!-- Click listener for the first header-->
         <Preference
             style="xd_pref_card_sin-accent2"
             android:key ="about_us_key"
                     android:icon="@drawable/ic_system_update"
            android:title="@string/network_traffic_title"
              <!-- Launch an AboutUsActivity when clicked -->
              intent = "org.adaway.ui.home.HomeActivity">


          </ Preference>


          <!-- Click listener for the second header-->
          <Preference

             style="xd_pref_card_sin-accent2"
               android:key ="contact_us_key"
                       android:icon="@drawable/ic_system_update"
                android:title="@string/network_traffic_title"
                <!-- Launch ContactUsActivity when clicked -->
                 intent = "org.chromium.android_webview.devui.MainActivity">
                 

           </ Preference>
      
       </ PreferenceCategory>

   

</ PreferenceScreen>

