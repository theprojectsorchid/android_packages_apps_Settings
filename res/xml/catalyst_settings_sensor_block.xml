<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:title=" ">


    <com.android.settingslib.widget.IllustrationPreference
        android:key="privacy"
        settings:searchable="false"
        android:order="-999"
        app:lottie_rawRes="@raw/privacy"/> 

   <!-- Header -->
  <PreferenceCategory
        android:title="Privacy Controls"
        android:order="-996"
        android:layout="@layout/settings_title_header">
  </PreferenceCategory>

      <com.android.settingslib.widget.TopIntroPreference
            android:key="Privacycontrols_bubbles_desc"
            android:order="-997"        
            android:title="@string/privacycontrols_bubble_setting_description"/>

    <!-- Master switch -->
    <com.arrow.support.preferences.SystemSettingSwitchPreference
        android:key="sensor_block"
        android:title="@string/sensor_block_title"
        android:summary="@string/sensor_block_summary"
        android:defaultValue="false" />

    <!-- App picker activity for sensor block -->
    <PreferenceCategory
        android:title="@string/sensor_block_app_picker_title"
        android:dependency="sensor_block"
        android:key="sensor_block_applications">

        <com.arrow.support.preferences.AppListPreference
            android:key="add_sensor_block_packages"
            android:icon="@drawable/ic_menu_add_white"
            android:title="@string/add_sensor_block_package_title" />
    </PreferenceCategory>

    <!-- Camera toggle -->
    <com.android.settingslib.RestrictedSwitchPreference
        android:key="privacy_camera_toggle"
        android:icon="@drawable/ic_settings_camera"
        android:title="@string/camera_toggle_title"
        android:summary="@string/cam_toggle_description"
        settings:controller="com.android.settings.privacy.CameraToggleController"/>

    <!-- Microphone toggle -->
    <com.android.settingslib.RestrictedSwitchPreference
        android:key="privacy_mic_toggle"
        android:icon="@drawable/rr_mic_icon"
        android:title="@string/mic_toggle_title"
        android:summary="@string/mic_toggle_description"
        settings:controller="com.android.settings.privacy.MicToggleController"/>
    
    <!-- hide indicator toggle -->
    <com.arrow.support.preferences.SecureSettingSwitchPreference
            android:key="hide_privacy_indicator"
            android:icon="@drawable/ic_manage_perms"
            android:title="@string/hide_privacy_indicator_title"
            android:summary="@string/hide_privacy_indicator_summary"
            android:defaultValue="false"/>

    <com.arrow.support.preferences.SecureSettingSwitchPreference
        android:key="window_ignore_secure"
        android:title="@string/ignore_window_secure_title"
        android:summary="@string/ignore_window_secure_summary"
        android:defaultValue="false"/>

    <com.android.settingslib.widget.FooterPreference
        android:key="sensor_block_footer"
        android:selectable="false"
        settings:searchable="false"
        android:dependency="sensor_block" />
</PreferenceScreen>
