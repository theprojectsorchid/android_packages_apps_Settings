<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="1"
    android:columnCount="2">

    <fragment
        android:id="@+id/DisplayCustomizations4"
        android:name="com.android.settings.awaken.fragments.DisplayCustomizations4"
        android:layout_width="0dp"
        android:background="@drawable/mt_preference_background_alone"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:textColor="?android:attr/colorAccent"
        android:title="@string/extraprivacy_level"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:clickable="true" />

    <fragment
        android:id="@+id/SensorBlockSettings"
        android:background="@drawable/mt_preference_background_alone"
        android:name="com.android.settings.privacy.SensorBlockSettings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:textColor="?android:attr/colorAccent"
        android:title="@string/sensor_block_title"
        android:summary="@string/sensor_block_summary"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:clickable="true" />
</GridLayout>
