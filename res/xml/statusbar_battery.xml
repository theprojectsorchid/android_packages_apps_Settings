<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"    
     xmlns:app="http://schemas.android.com/apk/res-auto"
    android:title=" "
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <com.android.settingslib.widget.IllustrationPreference
        android:key="statusbar_battery_animation"
        settings:searchable="false"         
        android:order="-999"       
        app:lottie_rawRes="@raw/statusbar_battery"/>

   <!-- Header -->
  <PreferenceCategory
        android:title="Statusbar battery"
        android:order="-997"
        android:layout="@layout/settings_title_header">
  </PreferenceCategory>


    <!-- Status bar battery customizations -->
    <PreferenceCategory         
        android:layout="@layout/custom_preference_category2"
        android:title="@string/status_bar_battery_category_title">

        <com.arrow.support.preferences.SystemSettingListPreference
            android:key="status_bar_battery_style"
                    android:icon="@drawable/ic_settings_quick_gestures"
            android:title="@string/status_bar_battery_style_title"
            android:summary="%s"
            android:dialogTitle="@string/status_bar_battery_style_title"
            android:entries="@array/status_bar_battery_style_entries"
            android:entryValues="@array/status_bar_battery_style_values"
            android:defaultValue="0" />

        <com.arrow.support.preferences.SystemSettingListPreference
            android:key="status_bar_show_battery_percent"
                    android:icon="@drawable/ic_settings_quick_gestures"
            android:title="@string/status_bar_battery_percent_title"
            android:dialogTitle="@string/status_bar_battery_percent_title"
            android:entries="@array/status_bar_battery_percent_entries"
            android:entryValues="@array/status_bar_battery_percent_values"
            android:defaultValue="0" />

        <com.arrow.support.preferences.SystemSettingSwitchPreference
            android:key="status_bar_battery_text_charging"
         android:icon="@drawable/ic_settings_quick_gestures"           
            android:title="@string/status_bar_battery_text_charging_title"
            android:summary="@string/status_bar_battery_text_charging_summary"
            android:defaultValue="true" />

    </PreferenceCategory>

    <!-- QS panel battery customizations -->
    <PreferenceCategory
        android:layout="@layout/custom_preference_category2"
        android:title="@string/qs_battery_category_title">

        <com.arrow.support.preferences.SystemSettingListPreference
            android:key="qs_battery_style"
            android:title="@string/status_bar_battery_style_title"
            android:entries="@array/qs_battery_style_entries"
            android:icon="@drawable/ic_settings_quick_gestures"
            android:entryValues="@array/qs_battery_style_values"
            android:defaultValue="-1" />

        <com.arrow.support.preferences.SystemSettingListPreference
            android:key="qs_show_battery_percent"
            android:icon="@drawable/ic_settings_quick_gestures"
            android:title="@string/qs_battery_percent_title"
            android:entries="@array/status_bar_battery_percent_entries"
            android:entryValues="@array/status_bar_battery_percent_values"
            android:defaultValue="2" />

    </PreferenceCategory>

</PreferenceScreen>
