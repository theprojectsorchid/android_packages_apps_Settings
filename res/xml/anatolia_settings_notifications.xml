<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:title=" " >


    <com.android.settingslib.widget.IllustrationPreference
        android:key="wifi_anim"
        settings:searchable="false"
        android:order="-999"
        app:lottie_rawRes="@raw/vpn_settings"/>
    
     <com.android.settingslib.widget.TopIntroPreference
            android:key="taptap_bubbles_desc"
            android:order="-996"        
            android:title="@string/vpn_settings_bubble_setting_description1"/>

        <Preference
            android:key="rethink_app"
            android:order="10"
            android:summary="@string/summary_rethink_app"
            android:icon="@drawable/ic_devices_home"
            android:title="@string/rethink_app" >
            <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.celzero.bravedns"
                android:targetClass="com.celzero.bravedns.ui.HomeScreenActivity" />
        </Preference>
        
    <com.android.settings.vpn2.VpnInfoPreference
        android:fragment="com.android.settings.vpn2.VpnSettings"
        android:key="vpn_settings"
        android:title="@string/vpn_settings_title"
        android:icon="@drawable/ic_vpn_key"
        android:order="15"
        android:summary="@string/summary_placeholder"
        settings:userRestriction="no_config_vpn"
        settings:useAdminDisabledSummary="true" />

    <com.android.settings.network.PrivateDnsModeDialogPreference
        android:key="private_dns_settings"
        android:title="@string/select_private_dns_configuration_title"
        android:icon="@drawable/ic_settings_private_dns"
        android:order="20"
        android:dialogTitle="@string/select_private_dns_configuration_dialog_title"
        android:dialogLayout="@layout/private_dns_mode_dialog"
        android:positiveButtonText="@string/save"
        android:negativeButtonText="@android:string/cancel" />

        <Preference
            android:key="addaway_app"
            android:order="25"
            android:summary="@string/summary_addaway_app"
            android:icon="@drawable/ic_device_status"
            android:title="@string/addaway_app" >
            <intent android:action="android.intent.action.MAIN"
                android:targetPackage="org.adaway"
                android:targetClass="org.adaway.ui.home.HomeActivity" />
        </Preference>
</PreferenceScreen>
