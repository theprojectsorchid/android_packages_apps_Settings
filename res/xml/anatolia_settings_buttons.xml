<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
	 xmlns:app="http://schemas.android.com/apk/res-auto"
     android:title=" ">
    
    
    <com.android.settingslib.widget.IllustrationPreference
        android:key="aboutus_anim"
        settings:searchable="false"
        android:order="-999"
        app:lottie_rawRes="@raw/aboutus_settings"/>

  
   <!-- Header -->
  <PreferenceCategory
        android:title="About Us"
        android:order="-998"
        android:layout="@layout/settings_title_header">
  </PreferenceCategory>
    

        <com.android.settingslib.widget.TopIntroPreference
            android:key="aboutus_bubbles_desc"
            android:order="-997"
            android:title="@string/aboutus_bubble_setting_description"/>
        
 
        <Preference
            android:title="@string/about_us_info"
                        android:icon="@drawable/ic_gvisual"
            android:summary="@string/about_us_info_summary" >
        <intent
            android:action="android.intent.action.VIEW"
            android:data="https://github.com/theorchidproject" />
        </Preference>

    <Preference
        android:title="@string/aboutus_link_title"
                    android:icon="@drawable/ic_inc_ring"
        android:summary="@string/aboutus_link_summary" >
        <intent
            android:action="android.intent.action.VIEW"
            android:data="https://t.me/orchidosdemo" />
    </Preference>

 <!-- Aggressive battery -->
    <Preference
        android:key="aggressive_battery"
        android:icon="@drawable/ic_battery_plus"
        android:title="@string/aggressive_battery_title"
        android:summary="@string/aggressive_battery_summary"
        android:fragment="com.crdroid.settings.fragments.misc.AggressiveBattery"/>
</PreferenceScreen>
