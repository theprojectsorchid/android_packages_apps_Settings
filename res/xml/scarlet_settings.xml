<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/scarlet_services_title">

       <com.arrow.support.preferences.SystemSettingSwitchPreference
        android:key="arcane_idle_manager"
        android:order="100"
        android:title="@string/system_idle_manager_title"
        android:icon="@drawable/ic_smart_charging"
        android:summary="@string/arcane_idle_manager_summary"
        android:defaultValue="false" />

       <com.arrow.support.preferences.SystemSettingSwitchPreference
        android:key="scarlet_idle_assistant_manager"
        android:title="@string/idle_manager_title"
        android:summary="@string/idle_manager_summary"
        android:defaultValue="false" />
        
        <com.arrow.settings.preferences.SecureSettingSwitchPreference
            android:key="scarlet_aggressive_mode"
            android:title="@string/scarlet_aggressive_title"
            android:dependency="scarlet_idle_assistant_manager"
            android:defaultValue="false" />

        <com.arrow.settings.preferences.SecureSettingSwitchPreference
            android:key="scarlet_aggressive_mode_wifi_toggle"
            android:title="@string/scarlet_aggressive_mode_wifi_toggle_title"
            android:summary="@string/scarlet_aggressive_mode_wifi_toggle_summary"
            android:dependency="scarlet_aggressive_mode"
            android:defaultValue="false" />

        <com.arrow.settings.preferences.SecureSettingSwitchPreference
            android:key="scarlet_aggressive_mode_bluetooth_toggle"
            android:title="@string/scarlet_aggressive_mode_bluetooth_toggle_title"
            android:summary="@string/scarlet_aggressive_mode_bluetooth_toggle_summary"
            android:dependency="scarlet_aggressive_mode"
            android:defaultValue="false" />

        <com.arrow.settings.preferences.SecureSettingSwitchPreference
            android:key="scarlet_aggressive_mode_cellular_toggle"
            android:title="@string/scarlet_aggressive_mode_cellular_toggle_title"
            android:summary="@string/scarlet_aggressive_mode_cellular_toggle_summary"
            android:dependency="scarlet_aggressive_mode"
            android:defaultValue="false" />

        <com.arrow.settings.preferences.SecureSettingSwitchPreference
            android:key="scarlet_aggressive_mode_location_toggle"
            android:title="@string/scarlet_aggressive_mode_location_toggle_title"
            android:summary="@string/scarlet_aggressive_mode_location_toggle_summary"
            android:dependency="scarlet_aggressive_mode"
            android:defaultValue="false" />

        <com.arrow.settings.preferences.SecureSettingSwitchPreference
            android:key="scarlet_aggressive_mode_sensors_toggle"
            android:title="@string/scarlet_aggressive_mode_sensors_toggle_title"
            android:summary="@string/scarlet_aggressive_mode_sensors_toggle_summary"
            android:dependency="scarlet_aggressive_mode"
            android:defaultValue="false" />

    

    <com.android.settingslib.widget.FooterPreference
        android:key="scarlet_manager_footer"
        android:title="@string/scarlet_manager_display_text"
        android:selectable="false"
        settings:searchable="false"/>
</PreferenceScreen>
