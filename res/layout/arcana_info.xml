<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:id="@+id/arcana_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@id/phone_image"
        android:layout_width="100dp"
        android:layout_height="205dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="42dp"
        android:layout_marginStart="36dp"
        android:layout_centerVertical="true"
        app:cardElevation="0dp"
        app:cardCornerRadius="18dp"
        app:strokeColor="?android:attr/textColorPrimary"
        app:strokeWidth="3dp">

        <com.android.utils.aboutWallpaperView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:gravity="center"
            android:elevation="0dp"
            android:contentDescription="@null"
            android:orientation="vertical" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/arcanalogo" />

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="42dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="26dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/phone_image">

        <TextView
            android:id="@+id/chipset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="@string/chipset"
            style="@style/TextAppearance.arcanaInfoTitle" />

        <TextView
            android:id="@+id/chipset_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            style="@style/TextAppearance.arcanaInfoSummary" />

        <TextView
            android:id="@+id/storage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="@string/storage"
            style="@style/TextAppearance.arcanaInfoTitle" />

        <TextView
            android:id="@+id/cust_storage_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            style="@style/TextAppearance.arcanaInfoReleaseSummary" />

        <TextView
            android:id="@+id/battery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="@string/battery"
            style="@style/TextAppearance.arcanaInfoTitle" />

        <TextView
            android:id="@+id/cust_battery_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            style="@style/TextAppearance.arcanaInfoReleaseSummary" />
            
        <TextView
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="@string/display"
            style="@style/TextAppearance.arcanaInfoTitle" />

        <TextView
            android:id="@+id/cust_display_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.arcanaInfoSummary" />

    </LinearLayout>
</RelativeLayout>
