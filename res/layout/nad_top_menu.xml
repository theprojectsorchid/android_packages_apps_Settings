<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:androidprv="http://schemas.android.com/apk/prv/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fireworks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="?android:attr/listPreferredItemPaddingEnd"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="?android:attr/listPreferredItemPaddingEnd"
        android:layout_marginBottom="14dp"
        android:background="@drawable/nad_top_bg"
        android:backgroundTint="?androidprv:attr/colorSurfaceHighlight"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:gravity="start|center"
        android:padding="10dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="58dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="6dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:backgroundTint="@android:color/system_accent1_200"
            android:background="@drawable/nad_top_bg">

            <androidx.preference.internal.PreferenceImageView
                android:id="@+id/avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@android:color/system_neutral1_10"
                app:maxWidth="48dp"
                app:maxHeight="48dp"
                android:paddingVertical="4dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_settings_battery_white" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center"
            android:orientation="vertical"
            android:paddingStart="18dp">
            <TextView
                android:id="@+id/nad_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="@string/lock_after_timeout"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:textDirection="locale" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:text="@string/lock_after_timeout"
                style="@style/PreferenceSummaryTextStyle"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="?android:attr/listPreferredItemPaddingEnd"
        android:layout_marginEnd="?android:attr/listPreferredItemPaddingEnd"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:gravity="start|center_vertical">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginEnd="4dp"
            android:padding="14dp"
            android:id="@+id/wifi"
            android:backgroundTint="@android:color/system_accent3_200"
            android:background="@drawable/nad_top_bg"
            android:orientation="horizontal"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/wifi_icon"
                    android:layout_width="28dp"
                    android:layout_height="match_parent"
                    android:antialias="true"
                    android:scaleType="fitCenter"
                    android:tint="@android:color/system_neutral1_10"
                    android:src="@drawable/ic_settings_battery_white"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="4dp"/>
                <TextView
                    android:id="@+id/wifi_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/lock_after_timeout"
                    android:textColor="@android:color/system_neutral1_10"
                    style="@style/PreferenceSummaryTextStyle"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/wifi_icon" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/battery"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:padding="14dp"
            android:backgroundTint="@android:color/system_accent3_300"
            android:background="@drawable/nad_top_bg"
            android:gravity="end|center_vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/battery_icon"
                    android:layout_width="28dp"
                    android:layout_height="match_parent"
                    android:antialias="true"
                    android:scaleType="fitCenter"
                    android:rotation="90"
                    android:tint="@android:color/system_neutral1_10"
                    android:src="@drawable/ic_settings_battery_white"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="4dp" />
                <TextView
                    android:id="@+id/battery_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/lock_after_timeout"
                    android:textColor="@android:color/system_neutral1_10"
                    style="@style/PreferenceSummaryTextStyle"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/battery_icon" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
